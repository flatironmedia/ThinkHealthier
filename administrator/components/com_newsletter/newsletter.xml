<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_newsletter</name>
    <creationDate>2016-02-29</creationDate>
    <copyright>2016 Aleksandar Vrhovac</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Aleksandar Vrhovac</author>
    <authorEmail>avrhovac@ogosense.com</authorEmail>
    <authorUrl>http://www.ogosense.com/</authorUrl>
    <version>CVS: 4.0.0</version>
    <description>Manages TH Daily newsletter</description>
    
    
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <update> <!-- Runs on update -->
        <sql>
            <file driver="mysql" charset="utf8">sql/update.mysql.utf8.sql</file>
        </sql>
    </update>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>newsletter.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <media destination="com_newsletter" folder="media">
        <folder>js</folder>
        <folder>css</folder>
    </media>
    <languages folder="languages/site">
        
			<language tag="en-GB">en-GB/en-GB.com_newsletter.ini</language>
    </languages>
    <administration>
        <menu img="media/com_newsletter/images/s_com_newsletter.png" >COM_NEWSLETTER</menu>
        <submenu>
            
			<menu link="option=com_newsletter&amp;view=thdailynewslettermanager" view="thdailynewslettermanager" img="media/com_newsletter/images/s_thdailynewslettermanager.png" alt="Newsletter/Thdailynewslettermanager">COM_NEWSLETTER_TITLE_THDAILYNEWSLETTERMANAGER</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>newsletter.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="languages/administrator">
            
			<language tag="en-GB">en-GB/en-GB.com_newsletter.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_newsletter.sys.ini</language>
        </languages>
    </administration>
    <plugins>
        <plugin group="search" plugin="newsletter"/>
    </plugins>
    
</extension>
