<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="search" method="upgrade">
	<name>plg_search_yoorecipe</name>
	<author>Yoorock</author>
	<creationDate>July 2013</creationDate>
	<copyright>(C) 2009 - 2013 YooRock SARL. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@yoorecipe.com</authorEmail>
	<authorUrl>http://www.yoorecipe.com</authorUrl>
	<version>5.2.0</version>
	<description>Includes YooRecipe items to Joomla native search.<br/>Please remind to ENABLE the plugin!!</description>
	<files>
		<filename plugin="yoorecipe">yoorecipe.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="bg-BG">bg-BG.plg_search_yoorecipe.ini</language>
		<language tag="bg-BG">bg-BG.plg_search_yoorecipe.sys.ini</language>
		<language tag="de-DE">de-DE.plg_search_yoorecipe.ini</language>
		<language tag="de-DE">de-DE.plg_search_yoorecipe.sys.ini</language>
		<language tag="en-GB">en-GB.plg_search_yoorecipe.ini</language>
		<language tag="en-GB">en-GB.plg_search_yoorecipe.sys.ini</language>
		<language tag="fr-FR">fr-FR.plg_search_yoorecipe.ini</language>
		<language tag="fr-FR">fr-FR.plg_search_yoorecipe.sys.ini</language>
		<language tag="it-IT">it-IT.plg_search_yoorecipe.ini</language>
		<language tag="it-IT">it-IT.plg_search_yoorecipe.sys.ini</language>
		<language tag="nb-NO">nb-NO.plg_search_yoorecipe.ini</language>
		<language tag="nb-NO">nb-NO.plg_search_yoorecipe.sys.ini</language>
		<language tag="sv-SE">sv-SE.plg_search_yoorecipe.ini</language>
		<language tag="sv-SE">sv-SE.plg_search_yoorecipe.sys.ini</language>
		<language tag="sl-SI">sl-SI.plg_search_yoorecipe.ini</language>
		<language tag="sl-SI">sl-SI.plg_search_yoorecipe.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text"
				default="50"
				description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
				label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
				size="5"
				/>
				
				<field name="search_content" type="radio"
				class="btn-group"
				default="0"
				description="JFIELD_PLG_SEARCH_ALL_DESC"
				label="JFIELD_PLG_SEARCH_ALL_LABEL"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
			</fieldset>
		</fields>
	</config>
	
	<updateservers>
		<!-- Note: No spaces or linebreaks allowed between the server tags -->
		<server type="extension" priority="1" name="YooRecipe Update Site">http://www.yoorecipe.com/updates/plg_search_yoorecipe.xml</server>
	</updateservers>
</extension>